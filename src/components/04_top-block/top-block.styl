.top-block
  height 400px
  background #71d6a9
  overflow hidden
  position relative
  border-bottom 10px solid #dcdcdc
  .container
    position absolute
    top 0
    left 0
    right 0
    margin auto
  h1
    font-weight 400
    color #fff
    letter-spacing 1px
    margin-top 40px
.top-block__inner-bg
  width 100%
  height 100%
  bg_options "../img/bg.jpg"
  opacity 0.1
.top-block__modal-view
  width: 500px
  height 187px
  box-shadow 0px -14px 29px 0 rgba(125, 125, 125, 0.44);
  position absolute
  margin auto
  left 0
  right 0
  bottom -1px
  display block
  z-index 30
  bg "../img/bg__modal.jpg"
  background-size contain
  animate 500 ease-in-out
  &:nth-child(4)
    t-translateY 32px
    &.active
      t-translateY 0
  &:nth-child(2)
    left -400px
    bottom -50px
  &:nth-child(3)
    right -400px
    bottom -50px
  span
    display block
    font-size 26px
    font-family 'Pacifico', cursive
    color #777777
    margin-top: 30px
    margin-left: 40px
.top-block__eye
  height 55px
  width 55px
  position absolute
  border-top 4px solid #777777
  radius 0
  animate 500 ease-in-out
.active .top-block__eye
    radius 50%
  &.eye__left
    top 116px
    left 120px
  &.eye__right
    top 116px
    right 120px