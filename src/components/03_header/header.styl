.header
  position fixed
  width 100%
  height 70px
  background #ececec
  top 0
  z-index 100
  color #2e2e2e
.header__logo
  display table
  height 70px
.header__logo > a
  font-family 'Pacifico', cursive
  color #2e2e2e
  font-size 24px
  text-decoration none
  display table-cell
  vertical-align middle
  height 40px
.header__download
  display table
  padding 15px
  height 70px
.header__nav-bar
  ul
    list-style none
    padding 0
    margin 0
    display table
    height 70px
    > li
        display inline-block
        padding 0 15px
        display table-cell
        vertical-align middle
        height 18px
        &.active
          > a
            color #71d6a9
        > a
            font-weight 500
            color #2e2e2e
            text-decoration none
            animate 300 ease-in-out
            &:hover
              color #5186ff
